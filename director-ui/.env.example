# pdf-link-youtube-to-anything-tg-bot Configuration
# Copy this file to .env and fill in your values

# Required Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
DATABASE_URL=postgresql://user:password@localhost:5432/pdf_link_youtube_to_anything_tg_bot

# OpenRouter AI Integration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324

# HeyGen AI Avatar Integration
HEYGEN_API_KEY=your_heygen_api_key_here

# Bot Metadata
BOT_NAME=PDF & YouTube Content Bot
BOT_DESCRIPTION=Process PDFs and YouTube videos with AI-powered analysis
BOT_VERSION=1.0.0

# Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es

# Logging Configuration
LOG_LEVEL=INFO

# API Settings
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=10000
API_CORS_ORIGINS=*

# Storage Settings
STORAGE_BASE_PATH=./storage
MAX_FILE_SIZE_MB=50
FILE_RETENTION_DAYS=90

# Development Settings
# DEBUG=true

# Python path for src layout
PYTHONPATH=src